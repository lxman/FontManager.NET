<Window x:Class="SVGTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SVGTester"
        mc:Ignorable="d"
        Name ="SvgPreviewWindow" Title="SVG Font Preview" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Load SVG Font" Click="LoadSvgClick" />
        <ScrollViewer Grid.Row="1">
            <WrapPanel Name="RenderPanel" />
        </ScrollViewer>
    </Grid>
</Window>
